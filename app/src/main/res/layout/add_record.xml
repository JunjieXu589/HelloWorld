<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="10dp"
        android:background="@color/moreCornsilk">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:text="Add a new record">
    </TextView>

    <androidx.cardview.widget.CardView
            android:id="@+id/addRecord_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_below="@id/title"

            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/add_parkName_title"
                    android:layout_alignParentLeft="true"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="Park"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
            />

            <Spinner
                    android:id="@+id/add_record_parkName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/add_parkName_title"
                    android:layout_marginTop="15dp"
                    android:spinnerMode="dropdown"
            >
            </Spinner>
            <!--   android:entries="@array/parkName" 可以直接在xml设置选项      -->

            <Button
                    android:id="@+id/add_morePark"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    app:backgroundTint="@color/nattierBlue"
                    android:textSize="9sp"
                    android:text="more"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    >

            </Button>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_reputation_title"
                    android:orientation="horizontal"
                    android:layout_below="@+id/add_parkName_title"
                    android:layout_marginTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="Reputation">
                </TextView>

                <EditText
                        android:id="@+id/detail_reputation"
                        android:layout_toRightOf="@+id/add_reputation_title"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Please input your assessment of reputation"
                />

            </LinearLayout>

            <!--record的  easy to use -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_easyUse_title"
                    android:orientation="horizontal"
                    android:layout_below="@+id/add_reputation_title"
                    android:layout_marginTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="Easy to Use">
                </TextView>

                <EditText
                        android:id="@+id/detail_easyUse"
                        android:layout_toRightOf="@+id/add_easyUse_title"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Whether easy to use"/>

            </LinearLayout>


            <!--接下来是时间 -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_time_title"
                    android:orientation="horizontal"
                    android:layout_below="@+id/add_easyUse_title"
                    android:layout_marginTop="15dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="Time:">
                </TextView>

                <EditText
                        android:id="@+id/add_date"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/add_time_title"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                />

                <EditText
                        android:id="@+id/add_time"
                        android:layout_toRightOf="@+id/add_date"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>


            <TextView
                    android:id="@+id/add_comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_time_title"
                    android:layout_marginTop="18dp"
                    android:text="Comment:"
                    android:textColor="#000000"
                    android:textSize="18sp">

            </TextView>
            <!--record 的comment 内容 -->
            <EditText
                    android:id="@+id/add_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:layout_margin="15dp"
                    android:textSize="18sp"
                    android:layout_below="@id/add_comment_title">

            </EditText>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            app:backgroundTint="@color/nattierBlue"
            android:id="@+id/add_record_confirm"
            android:layout_below="@id/addRecord_cardView"
            android:text="confirm"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="150dp"
    >

    </Button>

</RelativeLayout>