<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AllPark"
        android:background="@color/cornsilk">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
                android:id="@+id/parklist_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </ListView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/add_park"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Platform.MaterialComponents"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="16dp"
                app:icon="@drawable/add_symbol"
                android:text="Add a park"
                android:textSize="14sp">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    </FrameLayout>



</LinearLayout>