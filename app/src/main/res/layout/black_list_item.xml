<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
            android:id="@+id/blackList_parkName"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"

            android:textSize="20sp"
            android:layout_marginLeft="100dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackList_location_title"
            android:orientation="horizontal"
            android:layout_below="@id/blackList_parkName"
            android:layout_marginTop="18dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:maxLines="2"
                android:text="Location ">
        </TextView>

        <TextView
                android:id="@+id/blacklist_location"
                android:layout_toRightOf="@+id/detail_location_title"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blackList_cost_title"
            android:orientation="horizontal"
            android:layout_below="@id/blackList_location_title"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Cost ">
        </TextView>

        <TextView
                android:id="@+id/blacklist_cost"
                android:layout_toRightOf="@+id/blackList_cost_title"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"

                android:text=" $/h">

        </TextView>

    </LinearLayout>



</RelativeLayout>