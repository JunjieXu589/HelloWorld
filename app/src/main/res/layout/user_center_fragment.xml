<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cornsilk"
        android:orientation="vertical">

    <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/images_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_car"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_weight="0.3"
                    android:showDividers="middle"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/hello"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Hello,"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/user_center_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:textSize="18sp"
                        android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/top_layout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wallet"
                    android:text="Wallet"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="60">
            </TextView>
            <!--被逼无奈使用layout_weight属性 不然这个箭头就是不靠右边-->
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/right_arrow"
                    android:layout_gravity="center_vertical|right">
            </ImageView>

        </LinearLayout>

         <!-- 分割线-->
        <View android:layout_height="1dp"
              android:layout_width="match_parent"
              android:background="@color/black"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/top_layout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blacklist"
                    android:text="Black List"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="60">
            </TextView>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/right_arrow"
                    android:layout_gravity="center_vertical|right">
            </ImageView>

        </LinearLayout>


        <!-- 分割线-->
        <View android:layout_height="1dp"
              android:layout_width="match_parent"
              android:background="@color/black"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                style="@style/top_layout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/privacy"
                    android:text="Privacy Policy"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="60">
            </TextView>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/right_arrow"
                    android:layout_gravity="center_vertical|right">
            </ImageView>

        </LinearLayout>


    </LinearLayout>



    <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/login_btn_login"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp"
            android:background="?attr/colorPrimary"
            android:text="Log out"
            android:textColor="@color/white"
            android:textSize="18sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>
