<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/cornsilk">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true">

        <LinearLayout android:layout_width="212dp"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerInParent="true"
                      android:layout_marginTop="40dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginBottom="40dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Telephone">
            </TextView>

            <EditText android:layout_width="132dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/user_info_tel"
                      android:textSize="18sp">

            </EditText>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerInParent="true">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Plate number">
            </TextView>

            <EditText android:layout_width="136dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/user_info_car"
                      android:textSize="18sp">
            </EditText>

        </LinearLayout>


        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_info_confirm"
                app:backgroundTint="@color/nattierBlue"
                android:textSize="18sp"
                android:text="Confirm"
                android:layout_gravity="center_horizontal">
        </Button>

        <!-- 分割线 -->
        <View android:layout_height="1dp"
              android:layout_width="match_parent"
              android:background="@color/black"
              android:layout_marginTop="15dp"
        />

        <LinearLayout android:layout_width="200dp"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerInParent="true"
                      android:layout_marginTop="40dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginBottom="40dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="New Password">
            </TextView>

            <EditText android:layout_width="132dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/user_info_changePwd1"
                      android:textSize="18sp"
                      android:inputType="textPassword">

            </EditText>

        </LinearLayout>

        <LinearLayout android:layout_width="200dp"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerInParent="true"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginBottom="10dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Password Confirm">
            </TextView>

            <EditText android:layout_width="132dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/user_info_changePwd2"
                      android:textSize="18sp"
                      android:inputType="textPassword">

            </EditText>

        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:backgroundTint="@color/nattierBlue"
                android:id="@+id/user_pwd_confirm"
                android:text="Confirm"
                android:layout_gravity="center_horizontal">

        </Button>


    </LinearLayout>


</RelativeLayout>


